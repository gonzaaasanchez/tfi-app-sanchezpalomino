{
  "name": "@app/root",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "app",
      "packages/*"
    ]
  },
  "scripts": {
    "start": "yarn workspace @app/mobile start",
    "android": "yarn workspace @app/mobile android",
    "android:dev": "yarn workspace @app/mobile android:dev",
    "ios": "yarn workspace @app/mobile ios",
    "ios:dev": "yarn workspace @app/mobile ios:dev",
    "test": "jest --coverage",
    "test:debug": "jest -o --watch --coverage=false",
    "test:updateSnapshots": "jest -u --coverage=false",
    "lint": "eslint . --ext .js,jsx,.ts,.tsx",
    "format": "prettier '**/*.{js,jsx,ts,tsx}' --write",
    "format:fix": "prettier '**/*.{js,jsx,ts,tsx}' --write",
    "docs": "typedoc && sh docs/clean.sh"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-native": "0.76.7",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react-native": "^12.7.2",
    "@types/jest": "^29.5.13",
    "@types/react": "~18.2.45",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.36.1",
    "jest": "^29.7.0",
    "jest-expo": "~52.0.5",
    "prettier": "^3.3.3",
    "typedoc": "^0.26.8",
    "typedoc-plugin-markdown": "^4.2.9",
    "typedoc-plugin-merge-modules": "^6.0.1",
    "typedoc-plugin-not-exported": "^0.1.6",
    "typescript": "~5.3.3"
  },
  "private": true,
  "packageManager": "yarn@1.22.22"
}
